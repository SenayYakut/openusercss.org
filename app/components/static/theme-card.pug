mixin theme-card(hasImage, hasOverride)
  .card
    .card-header
      h6.card-header-title
        if hasOverride && block
          block
        else
          | {{theme.title}}
    if hasImage
      .card-image
        figure.image
          progressive-image(
            :src="proxyImage(theme.screenshots[0]).large",
            :placeholder="proxyImage(theme.screenshots[0]).small",
            width="100%",
            height="8rem",
            size="cover"
          )

    if block && !hasOverride
      .card-content
        block
